		<title>Testing event delegation using Jquery</title>
		<script src='jquery-2.1.1.js' type='text/javascript'></script>
		<script>
			$(document).ready(function() {
				$('#mainlist').on('click', 'li', function(){
						alert($(this).text());
					})			
			});
		</script>		
	</head>
	<body>
		<ul id='mainlist'>
			<li><a href="new">My new</a></li>
			<li>List Item 2</li>
			<li>List Item 3</li>			
		</ul>
